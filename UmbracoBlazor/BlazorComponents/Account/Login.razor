@page "/Account/Login"
@layout LoginLayout
@inherits LoginBase
<!--<h3>Login</h3>-->

<div class="form-group">
    <label for="Name">Username</label>
    <input @bind="LoginModel.Username" class="form-control" id="Username" />
</div>
<div class="form-group">
    <label for="Age">Password</label>
    <input @bind="LoginModel.Password" class="form-control" id="Password" />
</div>
<p>
    @Error
</p>

<input type="submit" class="btn btn-primary" value="Login" @onclick="LoginClicked" />
<br />
<br />
<a href="/Account/ResetPassword" style="float:left;">Forget Password</a>
<a href="/Account/Registration" style="float:right;">Registration</a>


<style>
    body {
        background-color: gray;
    }

    .page {
        max-width: 400px;
        margin: 0px auto;
        background-color: white;
        padding: 51px;
        margin-top: 100px;
        border-radius: 6px;
    }

    .btn-primary {
        width: 100%;
    }
</style>